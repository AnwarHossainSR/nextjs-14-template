{
  "name": "nextjs-14-template",
  "version": "0.1.0",
  "author": "Anwar Hossain",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "devt": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "eslint": "next lint --fix --dir src",
    "prettier": "prettier --write .",
    "lint": "yarn eslint && yarn prettier",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "postbuild": "next-sitemap && yarn prisma generate",
    "postinstall": "yarn prisma generate"
  },
  "lint-staged": {
    "*.{js,jsx,md,ts,tsx,html,css,scss}": "yarn prettier",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix --cache-location ./node_modules/.cache/.eslintcache"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/bundle-analyzer": "^13.5.6",
    "@prisma/client": "^5.4.2",
    "axios": "^1.5.0",
    "config": "^3.3.9",
    "date-fns": "^2.30.0",
    "mongoose": "^7.6.3",
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "tailwindcss": "^3",
    "typescript": "^5"
  }
}
